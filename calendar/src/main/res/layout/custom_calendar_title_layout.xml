<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/calendarTitlePaddingTop"
    android:paddingBottom="@dimen/calendarTitlePaddingBottom">

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc"
        android:paddingStart="@dimen/padding"
        android:paddingEnd="1dp"
        android:tint="@color/white"
        android:src="@drawable/previous_month_icon" />

    <TextView
        android:id="@+id/dateTitle"
        style="@style/CalendarView.MonthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:fontFamily="@font/roboto"
        android:tag="dateTitle"
        android:textColor="#4F4F4F"
        android:text="@string/samp_month"
        android:textSize="@dimen/calendarTitleText" />

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc"
        android:paddingStart="1dp"
        android:paddingEnd="@dimen/padding"
        android:tint="@color/white"
        android:src="@drawable/next_month_icon" />
</RelativeLayout>