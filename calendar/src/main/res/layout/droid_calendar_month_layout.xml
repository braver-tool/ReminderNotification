<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/robotoCalendarDateTitleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8sp"
    android:paddingBottom="8sp">

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/roboto_calendar_padding"
        android:layout_marginRight="@dimen/roboto_calendar_padding"
        android:tint="@color/roboto_calendar_day_of_the_week_font"
        app:srcCompat="@drawable/left_arrow_green"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/monthText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:tag="dateTitle"
        android:textAllCaps="true"
        android:textColor="@color/roboto_calendar_day_of_the_week_font"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="September 2018" />

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/roboto_calendar_padding"
        android:layout_marginRight="@dimen/roboto_calendar_padding"
        android:tint="@color/roboto_calendar_day_of_the_week_font"
        app:srcCompat="@drawable/right_arrow_green"
        tools:ignore="ContentDescription" />
</LinearLayout>
